@model NumeroIngresado
@{
    ViewData["Title"] = "Invertir Numero";
}
    <h3>Ingrese un Número</h3>
    <form center asp-action="Index" method="post" class="form-horizontal" role="form">
        
        <div class="form-group">
            <div class="col-md-3">
                <input asp-for="Numero" class="form-control " />
                <span asp-validation-for="Numero" ></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-3 col-md-offset-2">
                <button type="submit" class="btn btn-primary">Invertir</button>
            </div>
        </div>
    </form>


<h6>El Número Invertido es: @ViewData["numInver"]</h6>


